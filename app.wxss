/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.h1 {
    color: #000000;
    font-weight: 300;
    letter-spacing: 2px;
    text-transform: uppercase;
  }
  .p {
    color: #696969;
    flex: 1 1 auto;
    line-height: 1.5;
    font-weight: 300;
    letter-spacing: 1px;
    margin-bottom: 1.25rem;
  }
  .p2 {
    color: #696969;
    flex: 1 1 auto;
    line-height: 1.5;
    font-weight: 300;
    letter-spacing: 0.5px;
    margin-bottom: 1.25rem;
  }
  .priceText {
    color: #e63946;
    flex: 1 1 auto;
    line-height: 1.5;
    font-weight: bold;
    letter-spacing: 0.5px;
    margin-bottom: 1.25rem;
    font-size: 150%;
  }