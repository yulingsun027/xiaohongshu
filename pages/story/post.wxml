<form bindsubmit="formSubmit" bindreset="formReset">

  <view class="section">
    <view class="section__title">title</view>
    <input name="name" value="{{userInfo.nickName}}" placeholder="your post title" />
  </view>
  
  <view class="section">
    <view class="section__title">description</view>
    <textarea name="content" placeholder="what's your story?" ></textarea> 
  </view>

<view class="section">
    <view class="section__title">image</view>
    <textarea name="content" placeholder="select an img!" ></textarea> 
  </view>

  <view class="btn-area">
    <button formType="submit">Submit</button>
  </view>
</form>