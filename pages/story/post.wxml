<form bindsubmit="formSubmit" bindreset="formReset">

  <view class="section">
    <view class="h1 section__title">title:</view>
    <input class="p" name="name" value="{{userInfo.nickName}}" placeholder="your post title" />
  </view>
  
  <view class="section">
    <view class="h1 section__title">description:</view>
    <textarea class="p" name="content" placeholder="what's your story?" ></textarea> 
  </view>

<view class="section">
  <view class="h1 section__title">image:</view>
  <image wx:for="{{imgURL}}" src="{{item}}" bindtap="previewMyImage" data-url="{{item}}"></image>
    <textarea class="p" name="content" placeholder="this is my img!" ></textarea> 
     <button bindtap="selectImg">select</button>
  </view>

  <view class="h1 btn-area">
    <button formType="post">Submit</button>
  </view>
</form>