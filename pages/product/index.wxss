
.top-banner {
  background-color: greenyellow;
  border-radius: 0.25rem;
  box-shadow: 1.5px 2.5px 2.5px 1.5px rgba(0, 0, 0, 0.18);
  text-align: center;
  font-size: larger;
  font-weight: 500;
}

.carousel-image {
  height: 100%;
  width: 100%;
}

.cards {
  display: flex;
  flex-wrap: wrap;
  list-style: none;
  margin: 0;
  padding: 0;
}

.card {
  background-color: white;
  border-radius: 0.25rem;
  box-shadow: 1.5px 2.5px 2.5px 1.5px rgba(0, 0, 0, 0.18);
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding: 5px 5px;
  object-fit: contain;
  width: 50%;
  float: left;
  -webkit-box-sizing: border-box;
  -webkit-border-radius: 3px;
}